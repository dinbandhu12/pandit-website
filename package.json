{
  "name": "blog-website",
  "version": "1.0.0",
  "description": "A minimal blog website with React frontend and Node.js backend",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "setup": "node setup.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["blog", "react", "nodejs", "express", "postgresql"],
  "author": "",
  "license": "MIT"
} 